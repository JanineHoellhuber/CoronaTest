@page
@model WebApplication1.RegistrationModel
@{
}



<h2>Registierung</h2>

<hr />

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="Participant.FirstName" class="control-label"></label>
        <input asp-for="Participant.FirstName" class="form-control" />
        <span asp-validation-for="Participant.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Participant.LastName" class="control-label"></label>
        <input asp-for="Participant.LastName" class="form-control" />
        <span asp-validation-for="Participant.LastName" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="Participant.SocialSecurityNumber" class="control-label"></label>
        <input asp-for="Participant.SocialSecurityNumber" class="form-control" />
        <span asp-validation-for="Participant.SocialSecurityNumber" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Participant.Mobilenumber" class="control-label"></label>
        <input asp-for="Participant.Mobilenumber" class="form-control" placeholder="+43 ..." />
        <span asp-validation-for="Participant.Mobilenumber" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-12">
        <label asp-for="Participant.Street" class="control-label"></label>
        <input asp-for="Participant.Street" class="form-control" />
        <span asp-validation-for="Participant.Street" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-4">
        <label asp-for="Participant.HouseNr" class="control-label"></label>
        <input asp-for="Participant.HouseNr" class="form-control" />
        <span asp-validation-for="Participant.HouseNr" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="Participant.Door" class="control-label"></label>
        <input asp-for="Participant.Door" class="form-control" />
        <span asp-validation-for="Participant.Door" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="Participant.Stair" class="control-label"></label>
        <input asp-for="Participant.Stair" class="form-control" />
        <span asp-validation-for="Participant.Stair" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="Participant.Postcode" class="control-label"></label>
        <input asp-for="Participant.Postcode" class="form-control" />
        <span asp-validation-for="Participant.Postcode" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Participant.Place" class="control-label"></label>
        <input asp-for="Participant.Place" class="form-control" />
        <span asp-validation-for="Participant.Place" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <form method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-success" asp-page-handler="LogInBtn_Click">
                Anmeldung starten
            </button>
        </div>
    </form>
    <form method="post">
        <div class="form-group col-md-5">
            <button type="submit" class="btn btn-secondary" asp-page-handler="CancelBtn_Click">
                Abbrechen
            </button>
        </div>
    </form>
</div>



@section Scripts {
    {await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


    